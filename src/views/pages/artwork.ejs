<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <%- include('../partials/head', { meta }) %>
  </head>
  <body class="bg-ink text-zinc-100 antialiased">
    <a class="sr-only focus:not-sr-only focus:fixed focus:left-5 focus:top-5 focus:z-[100] focus:rounded-md focus:bg-black focus:px-4 focus:py-2 focus:text-white" href="#main">
      Skip to content
    </a>
    <%- include('../partials/nav', { nav }) %>

    <main id="main" class="pt-16">
      <section class="mx-auto max-w-6xl px-5 py-10 sm:py-14">
        <div class="flex items-center justify-between gap-4 reveal">
          <a href="/gallery" class="text-sm text-zinc-300/80 hover:text-zinc-50 transition">← Back to Gallery</a>
          <a href="/contact" class="text-sm text-zinc-300/80 hover:text-zinc-50 transition">Inquiry</a>
        </div>

        <div class="mt-8 grid gap-10 lg:grid-cols-12 lg:items-start">
          <div class="lg:col-span-7 reveal">
            <div class="rounded-2xl overflow-hidden border border-white/10 bg-black/30 shadow-soft">
              <picture>
                <source srcset="<%= artwork.image?.src || '' %>" type="image/webp" />
                <img
                  src="<%= artwork.image?.fallback || artwork.image?.src || '' %>"
                  alt="<%= artwork.image?.alt || artwork.title %>"
                  loading="eager"
                  decoding="async"
                  class="w-full h-auto object-cover"
                  onerror="this.onerror=null; this.src='<%= artwork.image?.blurPlaceholder || '/images/placeholders/portrait.svg' %>'"
                />
              </picture>
            </div>
          </div>

          <aside class="lg:col-span-5 reveal" aria-label="Artwork information">
            <p class="text-xs tracking-[0.35em] text-zinc-200/70">ARTWORK</p>
            <h1 class="mt-4 font-display text-4xl leading-[1.05] text-zinc-50"><%= artwork.title %></h1>
            <p class="mt-2 text-sm text-zinc-200/85"><%= artwork.artist || '' %></p>
            <p class="mt-3 text-zinc-300/85 leading-relaxed"><%= artwork.description %></p>

            <dl class="mt-8 grid gap-5 rounded-2xl border border-white/10 bg-white/[0.03] p-6">
              <div>
                <dt class="text-xs tracking-[0.35em] text-zinc-300/70">YEAR</dt>
                <dd class="mt-1 text-sm text-zinc-100"><%= artwork.year %></dd>
              </div>
              <div>
                <dt class="text-xs tracking-[0.35em] text-zinc-300/70">MEDIUM</dt>
                <dd class="mt-1 text-sm text-zinc-100"><%= artwork.medium %></dd>
              </div>
              <div>
                <dt class="text-xs tracking-[0.35em] text-zinc-300/70">DIMENSIONS</dt>
                <dd class="mt-1 text-sm text-zinc-100"><%= artwork.dimensions %></dd>
              </div>
            </dl>

            <div class="mt-8 flex flex-col gap-3">
              <a class="btn-primary" href="/contact?subject=<%= encodeURIComponent('Inquiry: ' + artwork.title) %>">
                Inquire about this work
              </a>
                <p class="text-xs text-zinc-300/70">
                We’ll respond within 1–2 business days. For urgent requests, email
                <span class="text-zinc-200"><%= artwork.inquiryEmail || 'studio@atelierstella.com' %></span>.
              </p>
            </div>
          </aside>
        </div>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>

