{
  "name": "artgallery-mvc",
  "version": "1.0.0",
  "private": true,
  "description": "Server-rendered atmospheric art gallery (Express + EJS) with Tailwind, MVC, and Docker.",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build:css": "tailwindcss -c tailwind.config.cjs -i ./src/styles/tailwind.css -o ./public/assets/css/app.css --minify",
    "build": "npm run build:css",
    "lint:assets": "node scripts/check-assets.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "tailwindcss": "^3.4.10"
  }
}

